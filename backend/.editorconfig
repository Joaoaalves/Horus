root = true

# default
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = false
indent_style = tab

# C#
[*.{cs,csproj,sln,props,target,config}]
indent_style = tab
indent_size = tab
charset = utf-8
end_of_line = lf

# Json
[*.json]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf


# Markdown and text
[*.md]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf

# Log files, lock files
[*.log]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = false
